<UserControl x:Class="ScreenshotCapture.ToolControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenshotCapture"
             mc:Ignorable="d" 
             Width="200" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top">

    <UserControl.Resources>
        <ResourceDictionary Source="/ScreenshotCapture;component/Themes/Styles.xaml" />
    </UserControl.Resources>
    

    <StackPanel Name="toolBox" Width="200" Height="32" Style="{StaticResource toolBox}">

        <Label Name="BtnOK" Content="确定" Style="{StaticResource toolLabelOK}" />
