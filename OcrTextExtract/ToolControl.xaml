<UserControl x:Class="OcrTextExtract.ToolControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OcrTextExtract"
             mc:Ignorable="d" 
             Width="200" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top">

    <StackPanel Name="toolBox" Width="200" Height="32" Style="{StaticResource toolBox}">

        <Label Name="BtnOK" Content="确定" Style="{StaticResource toolLabelOK}" />
        <Label Name="BtnCancel" Content="取消" Style="{StaticResource toolLabelCancel}" />
        <Label Name="BtnSaveAs" Content="下载" Style="{StaticResource toolLabelSaveAs}" />

    </StackPanel>
</UserControl>
